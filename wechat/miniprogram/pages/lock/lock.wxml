<view class="container">
    <view class="static">
        <image class="sedan" src="/resources/sedan.png" />
        <view class="margin-top">
            <view>驾驶安全是用户的责任</view>
            <view>请将车辆停放在停车位内</view>
        </view>
    </view>
    <view class="avatar-container">
        <button class="cu-avatar round lg bg-grey margin-xs" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
            <image src="{{avatorUrl}}"></image>
        </button>
        <view class="margin-top">我的头像</view>
    </view>
    <button class="bg-grey lg round btn-lock" bindtap="onUnlockTap">立即开锁</button>
</view>